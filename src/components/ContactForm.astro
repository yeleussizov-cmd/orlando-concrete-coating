<form class="space-y-6" action="https://api.web3forms.com/submit" method="POST">
  <!-- Web3Forms Access Key -->
  <input type="hidden" name="access_key" value="547c7e00-46ed-49f8-bdf0-bafafbff22ac" />
  <input type="hidden" name="subject" value="New Quote Request - Orlando Concrete Coating" />
  <input type="hidden" name="from_name" value="Orlando Concrete Coating Website" />
  <input type="hidden" name="redirect" value="https://orlandoconcretecoating.com/contact?success=true" />

  <!-- Honeypot spam protection -->
  <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block font-heading text-xs uppercase tracking-wider text-primary font-bold mb-2">
        Full Name <span class="text-accent">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 bg-surface border-2 border-surface-dark focus:border-accent focus:bg-white outline-none transition-all font-body"
        placeholder="John Smith"
      />
    </div>
    <div>
      <label for="email" class="block font-heading text-xs uppercase tracking-wider text-primary font-bold mb-2">
        Email Address <span class="text-accent">*</span>
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 bg-surface border-2 border-surface-dark focus:border-accent focus:bg-white outline-none transition-all font-body"
        placeholder="john@example.com"
      />
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="phone" class="block font-heading text-xs uppercase tracking-wider text-primary font-bold mb-2">
        Phone Number
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="w-full px-4 py-3 bg-surface border-2 border-surface-dark focus:border-accent focus:bg-white outline-none transition-all font-body"
        placeholder="(321) 831-9421"
      />
    </div>
    <div>
      <label for="service" class="block font-heading text-xs uppercase tracking-wider text-primary font-bold mb-2">
        Service Interested In
      </label>
      <select
        id="service"
        name="service"
        class="w-full px-4 py-3 bg-surface border-2 border-surface-dark focus:border-accent focus:bg-white outline-none transition-all font-body"
      >
        <option value="">Select a service...</option>
        <option value="epoxy">Epoxy Floor Coating</option>
        <option value="polyaspartic">Polyaspartic Coating</option>
        <option value="decorative">Decorative Concrete</option>
        <option value="garage">Garage Floor Coating</option>
        <option value="pool-deck">Pool Deck Resurfacing</option>
        <option value="commercial">Commercial Flooring</option>
        <option value="industrial">Industrial Flooring</option>
        <option value="other">Other</option>
      </select>
    </div>
  </div>

  <div>
    <label for="message" class="block font-heading text-xs uppercase tracking-wider text-primary font-bold mb-2">
      Project Details <span class="text-accent">*</span>
    </label>
    <textarea
      id="message"
      name="message"
      required
      rows="5"
      class="w-full px-4 py-3 bg-surface border-2 border-surface-dark focus:border-accent focus:bg-white outline-none transition-all font-body resize-none"
      placeholder="Tell us about your project: What type of space? Approximate square footage? Any specific requirements?"
    ></textarea>
  </div>

  <button
    type="submit"
    class="w-full bg-accent hover:bg-accent-dark text-primary px-8 py-4 font-heading font-bold uppercase tracking-wider transition-colors skew-x-[-4deg]"
  >
    <span class="skew-x-[4deg] inline-flex items-center justify-center gap-2">
      <i class="fa-solid fa-paper-plane"></i>Request Free Quote
    </span>
  </button>

  <p class="text-xs text-concrete-light text-center">
    <i class="fa-solid fa-lock text-accent mr-1"></i>
    We typically respond within 24 hours. Your information is secure and never shared.
  </p>
</form>
