---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

const locations = [
  { name: 'Orlando', areas: 'Downtown, College Park, Thornton Park, Mills 50, SODO' },
  { name: 'Winter Park', areas: 'Baldwin Park, Hannibal Square, Park Avenue' },
  { name: 'Kissimmee', areas: 'Celebration, Poinciana, St. Cloud' },
  { name: 'Lake Nona', areas: 'Medical City, Laureate Park, Nona Park' },
  { name: 'Dr. Phillips', areas: 'Bay Hill, Sand Lake, Restaurant Row' },
  { name: 'Windermere', areas: 'Isleworth, Butler Bay, Horizon West' },
  { name: 'Ocoee', areas: 'West Oaks, Fullers Cross, Meadow Woods' },
  { name: 'Winter Garden', areas: 'Horizon West, Hamlin, Storey Park' },
  { name: 'Altamonte Springs', areas: 'Longwood, Forest City, Wekiva Springs' },
  { name: 'Sanford', areas: 'Lake Mary, Heathrow, Markham Woods' },
  { name: 'Clermont', areas: 'Minneola, Groveland, Four Corners' },
  { name: 'Apopka', areas: 'Wekiva, Rock Springs, Zellwood' },
];
---

<Layout title="Service Areas â€” Epoxy Floor Coating Orlando & Central Florida" description="Concrete coating services in Orlando, Winter Park, Kissimmee, Lake Nona, Windermere, Sanford, Clermont & all of Central Florida. Epoxy garage floors & polyaspartic coatings near you. Free estimates." preloadImage="/images/team-work.webp">
  <Hero
    title="Concrete Coating Services Near You"
    subtitle="Serving Orlando and communities throughout Central Florida within a 50-mile radius"
    backgroundImage="/images/team-work.webp"
    compact
  />

  <!-- Map + Description -->
  <section class="py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-14 items-start">
        <div>
          <div class="w-12 h-1 bg-accent mb-4"></div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-6">
            Orlando & Central Florida Coverage
          </h2>
          <p class="text-lg text-concrete-light mb-6">
            Based in Orlando, our team provides professional concrete coating services throughout Central Florida. We travel to residential and commercial properties within approximately 50 miles of downtown Orlando, covering Orange, Seminole, Osceola, and Lake counties.
          </p>
          <p class="text-concrete-light mb-8">
            Whether you're in a lakefront home in Windermere, a condo in downtown Orlando, or managing a commercial facility in Sanford, we deliver the same meticulous craftsmanship and premium materials to every project.
          </p>

          <div class="bg-surface border-l-4 border-accent p-6 mb-6">
            <h3 class="font-heading font-bold text-primary uppercase text-sm tracking-wider mb-2">
              <i class="fa-solid fa-circle-question text-accent mr-2"></i>Not sure if we serve your area?
            </h3>
            <p class="text-concrete-light text-sm mb-3">
              Give us a call or fill out our contact form. We're always happy to discuss projects in surrounding areas.
            </p>
            <a href="/contact" class="inline-flex items-center gap-2 text-accent font-heading font-bold text-sm uppercase tracking-wider hover:gap-3 transition-all">
              Contact Us <i class="fa-solid fa-arrow-right text-xs"></i>
            </a>
          </div>
        </div>

        <!-- Map visual -->
        <div class="bg-primary/5 border border-primary/10 p-10 text-center">
          <i class="fa-solid fa-map-location-dot text-accent text-6xl mb-6 block"></i>
          <h3 class="font-heading font-bold text-primary uppercase tracking-wider text-lg mb-2">Central Florida Service Area</h3>
          <p class="text-concrete-light text-sm mb-4">Orlando &amp; surrounding 50-mile radius</p>
          <div class="inline-flex items-center gap-2 bg-accent/10 px-4 py-2 text-sm">
            <i class="fa-solid fa-truck text-accent"></i>
            <span class="text-concrete font-medium">We come to you &mdash; free on-site estimates</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Cities Grid -->
  <section class="py-20 md:py-28 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <div class="w-12 h-1 bg-accent mx-auto mb-4"></div>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">Communities We Serve</h2>
        <p class="text-lg text-concrete-light max-w-2xl mx-auto">
          From urban Orlando to the surrounding suburbs, we bring professional concrete coating services to your doorstep.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {locations.map((location) => (
          <div class="bg-surface p-6 border-b-4 border-transparent hover:border-accent transition-all group">
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-location-dot text-accent mt-1"></i>
              <div>
                <h3 class="font-heading font-bold text-primary uppercase tracking-wider group-hover:text-accent transition-colors">{location.name}</h3>
                <p class="text-sm text-concrete-light mt-1">{location.areas}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services by Sector -->
  <section class="py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <div class="w-12 h-1 bg-accent mx-auto mb-4"></div>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">Services Available in All Areas</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-8 bg-white shadow-md border-b-4 border-accent">
          <i class="fa-solid fa-house text-accent text-3xl mb-4 block"></i>
          <h3 class="font-heading font-bold text-primary text-xl uppercase tracking-wider mb-3">Residential</h3>
          <p class="text-concrete-light text-sm">Garage floors, basements, patios, driveways, pool decks, and interior floors for homeowners throughout Central Florida.</p>
        </div>
        <div class="text-center p-8 bg-white shadow-md border-b-4 border-accent">
          <i class="fa-solid fa-building text-accent text-3xl mb-4 block"></i>
          <h3 class="font-heading font-bold text-primary text-xl uppercase tracking-wider mb-3">Commercial</h3>
          <p class="text-concrete-light text-sm">Retail spaces, restaurants, showrooms, offices, medical facilities, and multi-unit properties across Orlando and beyond.</p>
        </div>
        <div class="text-center p-8 bg-white shadow-md border-b-4 border-accent">
          <i class="fa-solid fa-industry text-accent text-3xl mb-4 block"></i>
          <h3 class="font-heading font-bold text-primary text-xl uppercase tracking-wider mb-3">Industrial</h3>
          <p class="text-concrete-light text-sm">Warehouses, manufacturing facilities, hangars, distribution centers, and large-scale commercial operations.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="topo-bg relative py-20 md:py-28">
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="w-12 h-1 bg-accent mx-auto mb-4"></div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-white mb-4">
        We Come to You
      </h2>
      <p class="text-xl text-white/60 max-w-2xl mx-auto mb-10">
        Free on-site estimates anywhere in our Central Florida service area. No obligation, no pressure.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="inline-block bg-accent hover:bg-accent-dark text-primary px-10 py-4 font-heading font-bold uppercase tracking-wider transition-colors skew-x-[-4deg]">
          <span class="skew-x-[4deg] inline-flex items-center gap-2"><i class="fa-solid fa-arrow-right"></i>Request Free Quote</span>
        </a>
        <a href="tel:4075550123" class="inline-block border-2 border-accent text-accent hover:bg-accent hover:text-primary px-10 py-4 font-heading font-bold uppercase tracking-wider transition-colors skew-x-[-4deg]">
          <span class="skew-x-[4deg] inline-flex items-center gap-2"><i class="fa-solid fa-phone"></i>(407) 555-0123</span>
        </a>
      </div>
    </div>
  </section>
</Layout>
