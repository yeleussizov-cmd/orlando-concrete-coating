    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/png" href="/images/logo.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | Orlando Concrete Coating`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- Preload LCP hero image â€” mobile gets smaller file -->
    {preloadImage && (
      <>
        <link rel="preload" as="image" href={preloadImage.replace('.webp', '-640w.webp')} type="image/webp" media="(max-width: 640px)" fetchpriority="high" />
        <link rel="preload" as="image" href={preloadImage} type="image/webp" media="(min-width: 641px)" fetchpriority="high" />
      </>
    )}

    <!-- Critical CSS: above-fold layout, header, hero, fonts, colors -->
    <style is:inline>
      /* Font declarations for instant text rendering */
      @font-face{font-family:'Oswald';font-style:normal;font-weight:700;font-display:swap;src:url(https://fonts.gstatic.com/s/oswald/v53/TK3iWkUHHAIjg752GT8Gl-1PKw.woff2) format('woff2')}
      @font-face{font-family:'Source Sans 3';font-style:normal;font-weight:400;font-display:swap;src:url(https://fonts.gstatic.com/s/sourcesans3/v15/nwpBtKy2OAdR1K-IwhWudF-R9QMylBJAV3Bo8Ky462EM.woff2) format('woff2')}

      /* Core layout & colors */
      :root{--color-primary:#1a1a2e;--color-accent:#d4a437;--color-surface:#f5f0eb;--color-concrete:#3a3a3a}
      *,*::before,*::after{box-sizing:border-box;margin:0}
      body{font-family:'Source Sans 3',system-ui,sans-serif;background:var(--color-surface);color:var(--color-concrete);min-height:100vh;display:flex;flex-direction:column}

      /* Header: prevent layout shift */
      .top-bar-critical{background:var(--color-primary);height:40px}
      header{background:#fff;position:sticky;top:0;z-index:50;border-bottom:4px solid var(--color-accent);height:72px}

      /* Hero: reserve space to prevent CLS */
      .hero-critical{position:relative;overflow:hidden;padding:6rem 0;background:var(--color-primary)}
      .hero-critical h1{font-family:'Oswald',system-ui,sans-serif;font-weight:700;color:#fff;line-height:1.1}

      /* Fade-up animation */
      @keyframes fade-up{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}
      .animate-fade-up{animation:fade-up .6s ease-out both}

      /* Skewed elements */
      .skew-critical{transform:skewX(-4deg)}
      .skew-critical>*{transform:skewX(4deg)}
    </style>

    <!-- Fonts: preconnect + async load (non-blocking) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" rel="stylesheet" /></noscript>

    <!-- Font Awesome: async load (non-blocking) -->
