---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  preloadImage?: string;
}

const { title, description = "Orlando's premier concrete coating contractor. Epoxy garage floors, polyaspartic coatings, pool deck resurfacing & commercial flooring. Free estimates. Call (321) 831-9421.", preloadImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://orlandoconcretecoating.com');
